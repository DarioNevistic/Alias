<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/team_no_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/team_no_title"
        android:textColor="@color/black_in_game"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:layout_height="46dp">

        <EditText
            android:id="@+id/team_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_grey_border_8dp"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="@string/team_name_hint"
            android:selectAllOnFocus="true"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:textColor="@color/black_in_game"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/remove_team_btn"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_black_right_8dp"
            android:src="@drawable/ion_android_close_ionicons" />

    </RelativeLayout>


</LinearLayout>